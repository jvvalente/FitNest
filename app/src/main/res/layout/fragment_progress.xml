<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/statusImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="45dp"
                    android:src="@android:drawable/bottom_bar" />

                <TextView
                    android:id="@+id/accomplishedGoalsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/statusImage"
                    android:text="Accomplished Goals"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

                <ListView
                    android:id="@+id/accomplishedGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="195dp"
                    android:layout_below="@+id/accomplishedGoalsText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="38dp" />
                    <!--android:border="true"
                    />-->

                <TextView
                    android:id="@+id/progressGraphText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/accomplishedGoals"
                    android:text="Progress Graph"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

                <ImageView
                    android:id="@+id/progressGraph"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/progressGraphText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/rectangle_for_edit_text" />

                <TextView
                    android:id="@+id/goalsToAccomplishText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progressGraph"
                    android:text="Progress Graph"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" />

                <ListView
                    android:id="@+id/goalsToAccomplish"
                    android:layout_width="wrap_content"
                    android:layout_height="195dp"
                    android:layout_below="@+id/goalsToAccomplishText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="40dp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->
<!--&lt;!&ndash;        android:text="progress" />&ndash;&gt;-->

</FrameLayout>